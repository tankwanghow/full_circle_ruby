= render_flash
.accordion#accordion1.center-text
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{data: { toggle: 'collapse', parent: '#accordion1' }, href: '#advance-search-form', 'data-skip-pjax' => true }
        .bold Advance Search
    .accordion-body.collapse#advance-search-form
      .accordion-inner
        = simple_form_for :search, url: search_path, html: { class: 'form-search' } do |f|
          .row
            = f.input_field :terms, class: 'span3', placeholder: 'search...', value: session[:search][:terms]
            = f.input_field :date_from, class: 'datepicker input-small', placeholder: 'date from...', value: session[:search][:date_from]
            = f.input_field :date_to, class: 'datepicker input-small', placeholder: 'date to...', value: session[:search][:date_to]
            = f.input_field :amount_larger, class: 'numeric input-small', placeholder: 'amount larger...', value: session[:search][:amount_larger]
            = f.input_field :amount_smaller , class: 'numeric input-small', placeholder: 'amount smaller...', value: session[:search][:amount_smaller]
            = f.button :submit, 'Search', class: 'btn-primary'
            = link_to 'Clear', '#', class: 'btn btn-danger', id: 'clear-advance-search-form', 'data-skip-pjax' => true
- if @docs.length == 0
  %h1 No record found!
- else
  = paginate @docs
- for doc in @docs
  .row.searchable
    .span3
      =#did not use polymorphic_path to avoid n+1 issue
      = link_to doc.searchable_type, url_for(controller: doc.searchable_type.pluralize.underscore, action: :edit, id: doc.searchable_id), class: 'btn btn-info'
      %div
        %span.label.label-success= doc.created_at.to_s(:long)
      - if doc.created_at != doc.updated_at
        %div
          %span.label.label-warning= doc.updated_at.to_s(:long)
    %span.label= doc.doc_date
    -if doc.doc_amount
      %span.label.label-inverse= doc.doc_amount.to_money.format
    .span9= doc.content
- if @docs.length > 8
  = paginate @docs
  
