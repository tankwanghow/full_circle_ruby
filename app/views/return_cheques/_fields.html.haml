- stuff_cheque_id_error_to_chq_no f.object
.row-fluid
  .span12
    = f.input :return_to_name1, input_html: { class: 'span' }, label: 'Return To', autofocus: true
  .span6
    = f.input :doc_date, as: :datepicker, input_html: { class: 'span38' }, label: 'Date'
  .span8
    = f.input :reason, input_html: { class: 'span' }
#cheque-query
  .row-fluid
    = render 'cheque_query', account_element: '#return_cheque_return_to_name1', f: f
.row-fluid
  .span12
    = f.input :return_from_name1, input_html: { class: 'span', readOnly: true, tabindex: -1 }, label: 'Return From'
.row-fluid
  = f.hidden_field :cheque_id
  .span8
    = f.input :bank, input_html: { class: 'span', readOnly: true, tabindex: -1 }
  .span8
    = f.input :chq_no, input_html: { class: 'span', readOnly: true, tabindex: -1 }, label: 'Cheque No'
  .span8
    = f.input :city, input_html: { class: 'span', readOnly: true, tabindex: -1 }
  .span8
    = f.input :state, input_html: { class: 'span', readOnly: true, tabindex: -1 }
  .span6
    = f.input :due_date, as: :string, input_html: { class: 'span', readOnly: true, tabindex: -1 }
  .span8
    = f.input :amount, as: :string, input_html: { class: 'bold span numeric', readOnly: true, tabindex: -1 }

:coffee
  ($ document).ready -> return_cheque.init()
