.row-fluid
  .span18
    = f.input :employee_name, input_html: { class: 'span' }, label: 'Employee', autofocus: true
  .span10
    = f.input :doc_date, as: :datepicker, input_html: { class: 'span38' }
.row-fluid
  .span18
    = f.input :salary_type_name, input_html: { class: 'span' }, label: 'Salary Type'
  .span20
    = f.input :note, input_html: { class: 'span' }
.row-fluid
  .span10
    = f.input :amount, input_html: { class: 'numeric span', type: :text }
  .span10
    = f.input :target_amount, input_html: { class: 'numeric span', type: :text }
  .span10
    = f.input :start_date, as: :datepicker, input_html: { class: 'span38' }
  .span10
    = f.input :end_date, as: :datepicker, input_html: { class: 'span38' }
.row-fluid
  = f.input :status, collection: ['Active', 'Finish', 'Hold'], include_blank: false

:coffee
  app.typeahead_init '#recurring_note_employee_name', '/employee/typeahead_name'
  app.typeahead_init '#recurring_note_salary_type_name', '/salary_type/typeahead_name'