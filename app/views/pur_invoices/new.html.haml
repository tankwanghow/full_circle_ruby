= render_flash
= simple_nested_form_for @invoice, html: { class: 'form-inline well', id: 'invoice', data: { gst_type: 'purchase' } } do |f|
  %legend
    New Purchase Invoice
  = render 'fields', f: f
  .form-actions
    = f.button :submit, 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', PurInvoice.last ? edit_pur_invoice_path(PurInvoice.last) : root_path, class: 'btn btn-warning'