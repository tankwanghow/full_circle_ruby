.row-fluid
  .span12
    = f.input :customer_name1, input_html: { class: 'span' }, label: 'Customer', autofocus: true
  .span6
    = f.input :doc_date, as: :datepicker, input_html: { class: 'span40' }, label: 'Date'
  .span6
    = f.input :sale_no, input_html: { class: 'span' }
  .span14
    = f.input :tag_list, input_html: { data: { tags: CashSale.tag_counts.map {|t| t.name } }, class: 'span' }
#details
  .row-fluid
    = render_invoice_details_fields f, :details
    .offset30.span6
      %input.bold.show-hide.span.numeric{tabindex: -1, value: 0.00, id: 'total_details', type: 'text', readonly: true }
#particulars
  .row-fluid
    = render_particulars_fields f, :particulars
    .offset30.span6
      %input.bold.show-hide.span.numeric{tabindex: -1, value: 0.00, id: 'total_particulars', type: 'text', readonly: true }
#cheques
  .row-fluid
    = render_cheques_fields f, :cheques
    .offset28.span6
      %input.bold.show-hide.span.numeric{tabindex: -1, value: 0.00, id: 'total_cheques', type: 'text', readonly: true }
.row-fluid
  .span12
    = f.input :note, input_html: { rows: 3, class: 'span' }
  .span8
    = f.input :loader_list, input_html: { data: { tags: CashSale.loader_counts.map {|t| t.name } }, class: 'span' }
  .span8
    = f.input :unloader_list, input_html: { data: { tags: CashSale.unloader_counts.map {|t| t.name } }, class: 'span' }
  .offset38
    = f.input :sales_amount, input_html: { tabindex: -1, class: 'bold numeric', type: :text, name: 'sales_amount' }, label_html: { class: 'bold' }, readonly: true

:coffee
  ($ document).ready -> cash_sale.init()