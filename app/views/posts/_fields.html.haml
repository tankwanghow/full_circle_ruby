= f.input :title, autofocus: true
= f.input :content, class: 'tinymce', cols: 120, rows: 60

:coffee
  tinyMCE.init
    mode: 'textareas'
    theme: 'advanced'
    skin: 'default'
    width: '840px'
    height: '380px'
    plugins: 'preview, contextmenu'
    theme_advanced_buttons3_add: 'preview'
    plugin_preview_width: "500"
    plugin_preview_height: "600"