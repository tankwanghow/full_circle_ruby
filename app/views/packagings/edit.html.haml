= render_flash
= simple_nested_form_for @packaging, html: { class: 'form-inline well' } do |f|
  %legend
    Packaging
  = render 'fields', f: f
  .form-actions
    = f.button :submit, 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', edit_packaging_path(@packaging), class: 'btn btn-warning'
    - if current_user.is_admin?
      = link_to 'Delete', @packaging, method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger'
    = link_to 'New', new_packaging_path, class: 'btn btn-info'
    = link_to_index Packaging
    = link_to_audits_log @packaging
