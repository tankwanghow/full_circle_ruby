#pay-to
  .row-fluid
    .span5
      = f.input :pay_to_name1, input_html: { class: 'span' }, label: 'Pay To', autofocus: true
    .span5
      = f.input :collector, input_html: { class: 'span' }
    .span3
      = f.input :doc_date, as: :datepicker, input_html: { class: 'span19' }
    .span4
      = f.input :actual_debit_amount, input_html: { class: 'bold span', type: :text }, label_html: { class: 'bold' }, readonly: true
  #pay-to-particulars
    .row-fluid
      = render_particulars_fields f, :pay_to_particulars, false
#pay-from
  .row-fluid
    .span6
      = f.input :pay_from_name1, input_html: { class: 'span' }, label: 'Pay From'
    .span3
      = f.input :cheque_no, wrapper_html: { style: "display: #{f.object.pay_from_name1 == 'Cash in Hand' ? 'none' : ''}" }, input_html: { class: 'span' }
    .span3
      = f.input :cheque_date, as: :datepicker, wrapper_html: { style: "display: #{f.object.pay_from_name1 == 'Cash in Hand' ? 'none' : ''}" }, input_html: { class: 'span21' }
    .span4
      = f.input :actual_credit_amount, input_html: { class: 'bold span', type: :text }, label_html: { class: 'bold' }, readonly: true
  #pay-from-particulars
    .row-fluid
      = render_particulars_fields f, :pay_from_particulars
      .offset16.span3   
        %input.bold.show-hide.span.numeric{value: 0.00, id: 'total_pay_from_particulars', type: 'text', readonly: true }
      
