.row-fluid
  .span12
    = f.input :customer_name1, input_html: { class: 'span' }, label: 'Customer', autofocus: true
  .span6
    = f.input :reference_no, input_html: { class: 'span' }
  .span6
    = f.input :credit_terms, label: 'Terms(days)', input_html: { type: :text, class: 'span' }
  .span6
    = f.input :doc_date, as: :datepicker, input_html: { class: 'span38' }, label: 'Date'
  .span14
    = f.input :tag_list, input_html: { data: { tags: Invoice.tag_counts.map {|t| t.name } }, class: 'span' }
#details
  .row-fluid
    = render_invoice_details_fields f, :details
    .offset30.span6
      %input.bold.show-hide.span.numeric#total_details{tabindex: -1, value: 0.00, type: 'text', readonly: true }
#particulars
  .row-fluid
    = render_particulars_fields f, :particulars
    .offset30.span6
      %input.bold.show-hide.span.numeric#total_particulars{tabindex: -1, value: 0.00, type: 'text', readonly: true }
.row-fluid
  .span12
    = f.input :note, input_html: { rows: 3, class: 'span' }
  .span8
    = f.input :loader_list, input_html: { data: { tags: Invoice.loader_counts.map {|t| t.name } }, class: 'span' }
  .span8
    = f.input :unloader_list, input_html: { data: { tags: Invoice.unloader_counts.map {|t| t.name } }, class: 'span' }
  .offset37
    = f.input :invoice_amount, input_html: { tabindex: -1, class: 'bold numeric', type: :text, name: 'invoice_amount' }, label_html: { class: 'bold' }, readonly: true

:coffee
  ($ document).ready -> invoice.init()