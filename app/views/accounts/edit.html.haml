= render_flash
.span9
  = render 'share/chart_of_accounts'
.span14
  = simple_form_for @account, html: { class: 'form-horizontal well', admin_lock: @account.admin_lock } do |f|
    %legend
      Account
    = render 'fields', f: f
    .form-actions
      - if !@account.admin_lock
        = f.button :submit, 'Save', class: 'btn btn-primary'
        = link_to 'Cancel', edit_account_path(@account), class: 'btn btn-warning'
        = link_to 'Delete', @account, method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger'
        = link_to 'New Address', new_address_path(address: { addressable_id: @account.id, addressable_type: 'Account' }), class: 'btn btn-success'
        = link_to('Asset Info', edit_fixed_asset_path(@account.fixed_asset), class: 'btn btn-success') if @account.fixed_asset
        = link_to('Asset Info', new_fixed_asset_path(asset: { account_id: @account.id} ), class: 'btn btn-success') if @account.is_fixed_assets? and !@account.fixed_asset
    .row-fluid
      - if @account.addresses.count > 0
        - for address in @account.addresses
          = render 'addresses/address', address: address